@model BordspelWebApp.ViewModels.Delete.DeleteGebruikerViewModel
@{
    ViewData["Title"] = "Verwijder gebruiker";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h3 class="display-4">@ViewData["Title"]</h3>
            <p class="lead">
                Op deze pagina kan je een gebruiker verwijderen.
            </p>
            <p>Ben je zeker dat je @Model.Naam @Model.Voornaam wil verwijderen?</p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Verwijder" class="btn btn-outline-info" />
            </form>
        </div>
    </div>
    <a asp-action="Gebruikers" class="bodyBG">Terug naar de lijst</a>