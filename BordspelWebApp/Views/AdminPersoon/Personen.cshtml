@model BordspelWebApp.ViewModels.Lists.ListPersonenBeheerViewModel

@{
    ViewData["Title"] = "PersonenBeheer";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h3 class="display-4">@ViewData["Title"]</h3>
        </div>
        <div class="col align-self-center" style="display:flex; justify-content:end">
            <a asp-controller="AdminPersoon" asp-action="CreatePersoon" class="bodyBG">Maak nieuwe persoon aan</a>
        </div>
    </div>
    <div class="row">
        <p class="lead">
            Op deze pagina vind je een overzicht van alle personen. Je kan via hier ook aanmaken, aanpassen of verwijderen.
        </p> 
        <table class="table table-bordered table-striped">
            <tbody>
                @foreach (var persoon in Model.Personen)
                {
                    <tr>
                        <td class="col-md-6 align-middle bodyBG">
                            @Html.DisplayFor(modelItem => persoon.Naam) @Html.DisplayFor(modelItem => persoon.Voornaam)
                        </td>
                        <td class="col-md-3 align-middle bodyBG">
                            <a asp-action="EditPersoon" asp-route-id="@persoon.Id">Aanpassen</a>
                        </td>
                        <td class="col-md-3 align-middle bodyBG">
                            <a asp-action="DeletePersoon" asp-route-id="@persoon.Id">Verwijderen</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
