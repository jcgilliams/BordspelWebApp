@model BordspelWebApp.ViewModels.Delete.DeletePersoonViewModel
@{
    ViewData["Title"] = "Verwijder persoon";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h3 class="display-4">@ViewData["Title"]</h3>
            <p class="lead">
                Op deze pagina vind je een persoon verwijderen.
            </p>
            <p>Ben je zeker dat je <b>@Model.Naam @Model.Voornaam</b> wil verwijderen?</p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Verwijder" class="btn btn-outline-info" />
            </form>
        </div>
    </div>
    <a asp-action="Personen" class="bodyBG">Terug naar de lijst</a>

