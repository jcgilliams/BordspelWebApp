@model BordspelWebApp.ViewModels.Delete.DeleteBordspelPersoonViewModel
@{
    ViewData["Title"] = "Verwijder bordspelpersoon";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h3 class="display-4">@ViewData["Title"]</h3>
            <p>Ben je zeker dat je wil verwijderen?</p>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Verwijder" class="btn btn-outline-info" />
            </form>
        </div>
    </div>
    <a asp-action="BordspelPersonen" class="bodyBG">Terug naar de lijst</a>