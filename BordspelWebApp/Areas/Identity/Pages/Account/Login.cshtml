@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class=" container">
    <div class="row">
        <div class="col">
            <h3 class="display-4">@ViewData["Title"]</h3>
            <h5>Gebruik je account om in te loggen.</h5>
            <hr />
        </div>
    </div>
    <form id="account" method="post">
    <div class="row">
        <div class="col">
            <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger" style="font-size:small"></span>
             </div>                
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger" style="font-size:small"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                    <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
        </div>
    </div>
        <button type="submit" class="btn btn-outline-info">Log in</button>
            <div class="form-group">
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registreer als nieuwe gebruiker</a>
                </p>
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Paswoord vergeten?</a>
                </p>
            </div>        
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
